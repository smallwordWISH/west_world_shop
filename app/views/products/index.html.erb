<div class="container">
  <div class="products-panel">
    <% @products.each do |product| %>
      <div class="product-item">
        <div class="product-image">
          <%= image_tag(product.image) %>
        </div>
        <div class="product-info">
          <%= product.name %>
          $<%= product.price.round %>
        </div>
      </div>
    <% end %>
  </div>  
</div>
