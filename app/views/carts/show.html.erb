<div class="container">
  <div class="card cart-card">
    <div class="card-header">
      Shopping List
    </div>
    <div class="card-body">
      <%= render partial: "shared/cart_table" %>
    </div>
  </div>
  <div class="card shipping-info-card">
    <div class="card-header">Shipping Information</div>
    <div class="card-body">
      <%= form_for @order do |f| %>
        <div class="order-form">
          <%= f.label 'Shipping Name', class: "col-form-label" %>
          <%= f.text_field :shipping_name, class: "form-control" %>
          <%= f.label 'Shipping Phone', class: "col-form-label" %>
          <%= f.text_field :shipping_phone, class: "form-control" %>
          <%= f.label 'Shipping Address', class: "col-form-label" %>
          <%= f.text_field :shipping_address, class: "form-control" %>
        </div>
        <%= f.submit 'Proceed to Checkout', class: "btn btn-primary float-right" %>
      <% end %>
    </div>  
  </div>  
</div>
