<div class="container">
  <div class="nav nav-tabs">
      <%= link_to admin_root_path do %>
        <p class="nav-link active">Product</p>
      <% end %>
    <li class="nav-item">
      <%= link_to admin_orders_path do %>
        <p class="nav-link">Orders</p>
      <% end %>
    </li>
  </div>
  <%= link_to new_admin_product_path do %>
    <button class="btn btn-primary">New Product</button>
  <% end %> 
  <table class="table table-hover">
    <tr class="text-center">
      <th>Product Name</th>
      <th>Image</th>
      <th>Price</th>
      <th>Option</th>
    </tr>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td>
          <% if product.image_remote_url? %>
            <%= image_tag(product.image_remote_url, style: "width: 100px; height: 100px; margin: 0 auto;") %>
          <% elsif product.image? %>
            <%= image_tag(product.image, style: "width: 100px; height: 100px; margin: 0 auto;") %>
          <% end %>
        </td>
        <td class="text-center">$<%= product.price %></td>
        <td class="text-center">
          <%= link_to edit_admin_product_path(product) do %>
            <button class="btn btn-primary"><i class="fa fa-edit"></i></button>
          <% end %>
          <%= link_to admin_product_path(product), method: :delete do %>
            <button class="btn btn-danger"><i class="fa fa-trash"></i></button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</div>